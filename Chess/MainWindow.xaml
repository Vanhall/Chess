<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.Model"
        mc:Ignorable="d"
        Title="Chess" Height="436" Width="627" WindowStartupLocation="CenterScreen" MinWidth="600" MinHeight="450">
    <!--<Window.Resources>
        <CollectionViewSource x:Key="PiecesViewSource" Source="{Binding PiecesPlacement}"/>
        <CollectionViewSource x:Key="LegalMovesViewSource" Source="{Binding LegalMoves}"/>

        <CompositeCollection x:Key="BoardState">
            <CollectionContainer Collection="{Binding Source={StaticResource PiecesViewSource}}" />
